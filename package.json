{
  "name": "bcrypt-sandbox",
  "productName": "Bcrypt Sandbox",
  "description": "A tool for encrypting and decrypting text with bcrypt.",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "pretest": "electron-compile .",
    "test": "node test/spectron.js",
    "lint": "eslint --fix --cache --color --ext .jsx,.js src"
  },
  "keywords": [],
  "author": {
    "name": "Victor Nogueira",
    "email": "felladrin@gmail.com",
    "url": "https://victornogueira.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felladrin/bcrypt-sandbox"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "bcrypt_sandbox"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "Victor Nogueira",
        "name": "Bcrypt Sandbox"
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "Bcrypt Sandbox"
      }
    }
  },
  "dependencies": {
    "@types/webdriverio": "^5.0.0",
    "bcrypt": "^3.0.4",
    "electron": "^4.0.4",
    "electron-compile": "^6.4.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-hot-loader": "^4.6.5",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.85.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/eslint": "^4.16.6",
    "@types/mocha": "^5.2.5",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "4.0.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "mocha": "^5.2.0",
    "spectron": "^5.0.0"
  }
}
